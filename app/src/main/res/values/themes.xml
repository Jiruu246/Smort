<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Smort" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="borderButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingVertical">12sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:foreground">@drawable/bordered_button</item>
    </style>

    <style name="solidButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingVertical">12sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/nordwhite</item>
        <item name="android:background">@drawable/solid_button</item>
    </style>

    <style name="borderButton_thin">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingVertical">12sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:foreground">@drawable/bordered_button_thin</item>
    </style>

    <style name="Header1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Header2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>